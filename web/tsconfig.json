{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "webworker"],
    "allowImportingTsExtensions": true
  }
}
